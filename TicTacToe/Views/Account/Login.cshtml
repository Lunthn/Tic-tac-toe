@model LoginModel

@{
    ViewData["Title"] = "Inloggen";
}
<link rel="stylesheet" href="~/css/account.css" />

<div class="wrapper">
<h1>@ViewData["Title"]</h1>

<form asp-controller="account" asp-action="login" method="post">
    <div>
        <label asp-for="Username">Gebruikersnaam</label>
        <input asp-for="Username" />
    </div>

    <div>
        <label asp-for="Password">Wachtwoord</label>
        <input asp-for="Password" type="password" />
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
                <span asp-validation-for="Password" class="error-status">@error.ErrorMessage</span>
        }
    </div>
    <div>
        <a href="/">Wachtwoord vergeten?</a>
    </div>

    <div class="button-group">
        <button type="submit">Inloggen</button>
        <a asp-controller="account" asp-action="register" class="btn-secondary">Registreren</a>
    </div>
</form>
</div>
